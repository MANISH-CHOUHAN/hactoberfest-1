#include<iostream>
using namespace std;
int main()               //MAIN FUNCTION
{
    int n;
    cin>>n;

    for (int  i = 1; i <=n; i++) //FOR LOOP
    {
        for (int j = 1; j <=i; j++)
        {
            if ((i+j)%2==0)
            {
                cout<<" 1";
            }
            else
            {
                cout<<" 0";
            }
        }
       cout<<endl; 
    }
    return 0;
}
